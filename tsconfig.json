{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2021",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "rootDirs": ["src", "__tests__", "__mocks__"],
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": ["src", "__tests__", "__mocks__"],
  "exclude": ["__tests__", "__mocks__"]
}