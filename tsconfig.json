{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "rootDirs": ["src", "__tests__"],
    "baseUrl": "src",
    "paths": {
      "@/__tests__/*": ["../tests/*"],
      "@/*": [
        "*"
      ]
    }
  },
  "include": ["src", "__tests__"],
  "exclude": []
}